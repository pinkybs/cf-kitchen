{%include file="header.phtml"%}
{%include file="common/ad_header.phtml"%}

<div id="foodList">
	<div class="content" style="background:#f0f5e0;"> 
		<div class="headline" style="background:#8bbd82;text-align:center;">
			<img src="{%$staticUrl%}/apps/kitchen/mobile/img/title/refrigerator.gif" width="230" height="60" /><br />
		</div><!--/#headline-->

		<div class="kind" style="text-align:center;">
			<img src="http://mm.mixi.net/img/dot0.gif" width="1" height="3" /><br />
			{% if $category == 0 %}すべて{% else %}<a href='{% "$baseUrl/mobile/kitchenitem/food"|mixiurl %}'>すべて</a>{% /if %}<span style="color:#999999;">|</span>{% if $category == 1 %}魚貝類{% else %}<a href='{% "$baseUrl/mobile/kitchenitem/food/CF_category/1"|mixiurl %}'>魚貝類</a>{% /if %}<span style="color:#999999;">|</span>{% if $category == 4 %}肉類{% else %}<a href='{% "$baseUrl/mobile/kitchenitem/food/CF_category/4"|mixiurl %}'>肉類</a>{% /if %}<span style="color:#999999;">|</span>{% if $category == 6 %}乳卵・豆{% else %}<a href='{% "$baseUrl/mobile/kitchenitem/food/CF_category/6"|mixiurl %}'>乳卵・豆</a>{% /if %}<br />{% if $category == 3 %}調味料{% else %}<a href='{% "$baseUrl/mobile/kitchenitem/food/CF_category/3"|mixiurl %}'>調味料</a>{% /if %}<span style="color:#999999;">|</span>{% if $category == 2 %}穀類{% else %}<a href='{% "$baseUrl/mobile/kitchenitem/food/CF_category/2"|mixiurl %}'>穀類</a>{% /if %}<span style="color:#999999;">|</span>{% if $category == 5 %}野菜{% else %}<a href='{% "$baseUrl/mobile/kitchenitem/food/CF_category/5"|mixiurl %}'>野菜</a>{% /if %}<span style="color:#999999;">|</span>{% if $category == 7 %}フルーツ{% else %}<a href='{% "$baseUrl/mobile/kitchenitem/food/CF_category/7"|mixiurl %}'>フルーツ</a>{% /if %}<br /><img src="http://mm.mixi.net/img/dot0.gif" width="1" height="3" /><br />
			<div style="background:#8bbd82;text-align:center;"><img src="{%$staticUrl%}/apps/kitchen/mobile/img/line.gif" width="230" height="1" /></div>
		</div><!--/.kind-->

		{% if $food %}
			<div class="count">
				<img src="http://mm.mixi.net/img/dot0.gif" width="1" height="3" /><br />
				{%$pager.count%}件中 {%$start%}-{%$end%}件<br />
				<img src="http://mm.mixi.net/img/dot0.gif" width="1" height="3" /><br />
				<div style="background:#8bbd82;text-align:center;"><img src="{%$staticUrl%}/apps/kitchen/mobile/img/line.gif" width="230" height="1" /></div>
			</div><!--/.count-->
		{% /if %}

		<div class="inner">

			{% if $food %}

				{% foreach from=$food item=data%}
					<div class="section">
						<table width="100%" cellpadding="0" cellspacing="0" border="0">
							<tr>
								<td style="width:44px;text-align:center;"><img src="{%$staticUrl%}/apps/kitchen/mobile/img/food/40x40/{%$data.food_picture%}.gif" width="40" height="40" style="margin:3px 0;" /></td>
								<td><div style="{% if $ua==1 %}font-size:x-small;{% /if %}">{%$data.food_name%}<br />
									{%$data.food_introduce%}<br />
									<div style="text-align:right;">数量:{%$data.food_count%}&nbsp;</div>
								</div></td>
							</tr>
						</table>
						<div style="background:#8bbd82;text-align:center;"><img src="{%$staticUrl%}/apps/kitchen/mobile/img/line.gif" width="230" height="1" /></div>
					</div><!--/.section-->
				{% /foreach %}

				{% if $pager.count > 5 %}
					{%include file="common/pager.phtml"%}
					<img src="http://mm.mixi.net/img/dot0.gif" width="1" height="3" /><br />
					<div style="background:#8bbd82;text-align:center;"><img src="{%$staticUrl%}/apps/kitchen/mobile/img/line.gif" width="230" height="1" /></div>
				{% /if %}

				{% if $level >= 4 %}
					<div class="toShopNav" style="text-align:center;">
						<img src="http://mm.mixi.net/img/dot0.gif" width="1" height="3" /><br />
						{% emoji code="F9A0" %}<a href='{% "$baseUrl/mobile/kitchenshop/foodlist"|mixiurl %}'>デパートで食材を買おう</a><br />
						<img src="http://mm.mixi.net/img/dot0.gif" width="1" height="3" /><br />
						<div style="background:#8bbd82;text-align:center;"><img src="{%$staticUrl%}/apps/kitchen/mobile/img/line.gif" width="230" height="1" /></div>
					</div><!--/.toShopNav-->
				{% /if %}

			{% else %}
				<div class="null" style="text-align:center;">
					<img src="http://mm.mixi.net/img/dot0.gif" width="1" height="10" /><br />
					{% if $level >= 4 %}
						まだ食材がありません<br />
						食材市場で食材を調達しよう!<br />
						<img src="http://mm.mixi.net/img/dot0.gif" width="1" height="5" /><br />
						<span style="color:#ff9999;">≫</span><a href='{% "$baseUrl/mobile/kitchenshop/foodlist"|mixiurl %}'>食材市場へ</a><span style="color:#ff9999;">≪</span><br />
					{% else %}
						まだ食材がありません<br />
					{% /if %}
					<img src="http://mm.mixi.net/img/dot0.gif" width="1" height="10" /><br />
					<div style="background:#8bbd82;text-align:center;"><img src="{%$staticUrl%}/apps/kitchen/mobile/img/line.gif" width="230" height="1" /></div>
				</div><!--/.null-->
			{% /if %}

			<div class="footlink">
				<img src="http://mm.mixi.net/img/dot0.gif" width="1" height="3" /><br />
				{% if $ua!=2 %}{% emoji code="F97E" %}{% else %}{% emoji code="F8F8" %}{% /if %}<a href='{% "$baseUrl/mobile/kitchenitem/index"|mixiurl %}'>アイテムBOX</a><br />
				{% emoji code="F8E4" %}<a href='{% "$baseUrl/mobile/kitchenrecipe/recipelist"|mixiurl %}'>レシピ図鑑</a><br />
				{% emoji code="F8C4" %}<a href='{% "$baseUrl/mobile/kitchen/home"|mixiurl %}'>Myレストラン</a><br />
			</div><!--/.footlink-->

			<img src="http://mm.mixi.net/img/dot0.gif" width="1" height="3" /><br />
			<div class="line" style="background:#8bbd82;"><img src="http://mm.mixi.net/img/dot0.gif" width="1" height="3" /></div>
		</div><!--/.content-->
	</div><!--/.inner-->
</div><!--/#foodList-->

{%include file="common/menu.phtml"%}
{%include file="ad_footer.phtml"%}